<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shopping_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Top bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45sp"
        android:orientation="horizontal"
        android:background="@color/topbar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Shopping cart"
            android:textSize="25sp"
            android:gravity="center_vertical"
            android:layout_marginStart="16dp" />
    </LinearLayout>

    <!-- Scrollable shopping list -->
    <ScrollView
        android:id="@+id/list_scroll_view"
        android:layout_marginTop="45sp"
        android:layout_marginBottom="55sp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/shopping_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:background="@android:color/transparent"
        android:padding="8dp">
        <!-- Floating Action Button -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:layout_constraintRight_toRightOf="@id/buttonHome"
            android:src="@mipmap/list_icon_foreground"
            android:contentDescription="Add Item"
            tools:ignore="MissingConstraints" />

        <!-- Purchased All Button -->
        <Button
            android:id="@+id/buttonHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Purchased All"
            app:layout_constraintTop_toBottomOf="@id/fab"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
