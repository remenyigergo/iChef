<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ingredient_layout"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:clickable="true"
    android:focusable="true">

    <CheckBox
        android:id="@+id/cbChild"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_marginEnd="8dp" />
<!--    this change in this commit is, so they not overlap. i dont even know if this works properly or not -->

    <TextView
        android:id="@+id/tvChildTitle"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="16sp" />

    <ImageButton
        android:id="@+id/btnDeleteChild"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:scaleType="centerCrop"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@mipmap/close_foreground"
        android:contentDescription="Delete Child"
        android:paddingRight="8dp"

        android:layout_gravity="center" />
</LinearLayout>
