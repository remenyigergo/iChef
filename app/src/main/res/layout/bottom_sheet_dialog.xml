<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/bottom_sheet_dialog_layout">

    <!-- Handle at the top of the bottom sheet with rounded corners -->
    <View
        android:id="@+id/handle"
        android:layout_width="45dp"
        android:layout_height="5dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="@drawable/bottom_sheet_dialog_handle"
        />

    <!-- Main content of the Bottom Sheet -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:padding="13dp"
            android:textStyle="bold"
            android:background="@drawable/nav_background_curved"
            app:backgroundTint="@color/background"
            android:textColor="@color/navbar_background"
            android:layout_marginBottom="5dp"
            android:text="@string/profile"
            app:icon="@mipmap/profile_foreground"
            app:iconTint="@color/navbar_background"
            app:iconSize="24dp"
            app:iconGravity="textStart" />


        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="13dp"
            android:textStyle="bold"
            android:background="@drawable/nav_background_curved"
            app:backgroundTint="@color/background"
            android:textColor="@color/navbar_background"
            android:layout_marginBottom="5dp"
            app:icon="@mipmap/fridge_icon_foreground"
            app:iconSize="24dp"
            app:iconGravity="textStart"
            app:iconTint="@color/navbar_background"
            android:text="Fridge" />

        <Button
            android:id="@+id/button3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/navbar_background"
            android:padding="13dp"
            android:textStyle="bold"
            android:background="@drawable/nav_background_curved"
            app:backgroundTint="@color/background"
            android:layout_marginBottom="20dp"
            app:icon="@mipmap/more_foreground"
            app:iconTint="@color/navbar_background"
            app:iconSize="24dp"
            app:iconGravity="textStart"
            android:text="@string/options" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>


