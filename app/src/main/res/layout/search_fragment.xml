<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="70dp">

        <!-- Search Bar -->
        <EditText
            android:id="@+id/search_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Search Recipes"
            android:inputType="text"
            android:padding="20dp"
            android:layout_margin="20dp"
            android:background="@drawable/item_parent_background"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Ingredient Input Box -->
        <EditText
            android:id="@+id/ingredient_input"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Enter Ingredient"
            android:inputType="text"
            android:padding="20dp"
            android:layout_margin="20dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/item_parent_background"
            android:backgroundTint="@color/gray"
            app:layout_constraintTop_toBottomOf="@id/search_bar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Expand Filters Button -->
        <Button
            android:id="@+id/btn_toggle_filters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Advanced Filters â–¼"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/topbar"
            app:layout_constraintTop_toBottomOf="@id/ingredient_input"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Expandable Filters Section -->
        <LinearLayout
            android:id="@+id/filters_section"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/btn_toggle_filters"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/search_country_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Country"
                android:textStyle="italic|bold"
                android:gravity="left"
                android:paddingTop="20dp"
                android:textSize="16sp"
                android:textColor="?attr/colorOnPrimary"
                app:layout_constraintTop_toBottomOf="@id/filters_section"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <!-- Country Dropdown -->
            <Spinner
                android:id="@+id/spinner_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@color/topbar"
                android:entries="@array/country_options"
                app:layout_constraintTop_toBottomOf="@id/search_country_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/search_dish_type_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Dish type"
                android:textStyle="italic|bold"
                android:gravity="left"
                android:paddingTop="20dp"
                android:textSize="16sp"
                android:textColor="?attr/colorOnPrimary"
                app:layout_constraintTop_toBottomOf="@id/spinner_country"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <!-- Dish Type Dropdown -->
            <Spinner
                android:id="@+id/spinner_dish_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@color/topbar"
                android:entries="@array/dish_type_options"
                app:layout_constraintTop_toBottomOf="@id/search_dish_type_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/search_kitchen_type_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Kitchen"
                android:textStyle="italic|bold"
                android:gravity="left"
                android:paddingTop="20dp"
                android:textSize="16sp"
                android:textColor="?attr/colorOnPrimary"
                app:layout_constraintTop_toBottomOf="@id/spinner_dish_type"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <!-- Kitchen Dropdown -->
            <Spinner
                android:id="@+id/spinner_kitchen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@color/topbar"
                android:entries="@array/price_options"
                app:layout_constraintTop_toBottomOf="@id/search_kitchen_type_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/search_meal_type_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Meal type"
                android:textStyle="italic|bold"
                android:gravity="left"
                android:paddingTop="20dp"
                android:textSize="16sp"
                android:textColor="?attr/colorOnPrimary"
                app:layout_constraintTop_toBottomOf="@id/spinner_kitchen"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <!-- Meal Type Dropdown -->
            <Spinner
                android:id="@+id/spinner_meal_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@color/topbar"
                android:entries="@array/meal_type_options"
                app:layout_constraintTop_toBottomOf="@id/search_meal_type_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/search_special_diet_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Special diet"
                android:textStyle="italic|bold"
                android:gravity="left"
                android:paddingTop="20dp"
                android:textSize="16sp"
                android:textColor="?attr/colorOnPrimary"
                app:layout_constraintTop_toBottomOf="@id/spinner_meal_type"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <!-- Special Diet Dropdown -->
            <Spinner
                android:id="@+id/spinner_special_diet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@color/topbar"
                android:entries="@array/special_diet_options"
                app:layout_constraintTop_toBottomOf="@id/search_special_diet_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />
        </LinearLayout>

        <!-- Search Button -->
        <Button
            android:id="@+id/btn_search"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Search"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:layout_constraintTop_toBottomOf="@id/filters_section"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
