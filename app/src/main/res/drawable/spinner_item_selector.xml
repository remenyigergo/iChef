<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- When item is pressed -->
    <item android:drawable="@drawable/spinner_pressed" android:state_pressed="true"/>

    <!-- When item is selected -->
    <item android:drawable="@drawable/spinner_selected" android:state_selected="true"/>

    <!-- Default state -->
    <item android:drawable="@drawable/spinner_background"/>

</selector>
