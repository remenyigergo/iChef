<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--    Style of the BottomNavBar background shape-->
    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:width">0dp</item>
        <item name="android:height">0dp</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_dialog_style</item>
    </style>

    <style name="CustomSpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:dropDownSelector">@drawable/ic_expand_more</item>
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:dropDownHeight">match_parent</item>
    </style>
</resources>